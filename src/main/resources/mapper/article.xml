<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="entity.Article">

    <!-- 将数据库返回的每一行映射成一个Java POJO对象
         一个column对应一个property -->
    <resultMap id="articleResult" type="entity.Article">

        <!-- id标签和result用法一样，但是id标签暗示了
             这个字段是主键，有利于提高性能 -->
        <id property="id" column="id"/>
        <result property="title" column="title" />
        <result property="content" column="content" />

        <!-- 每个association都是引用一个resultMap -->
        <association property="author" javaType="entity.Monkey">
            <id property="id" column="author_id"/>
            <result property="name" column="author_name" />
        </association>
    </resultMap>

    <select id="selectArticle" parameterType="java.lang.Integer"
            resultMap="articleResult">
      select
          article.id, title, content, monkey.name as author_name, monkey.id as author_id
      from article
          left join monkey on article.author_id = monkey.id
      where article.id = #{id}
      ;
    </select>

    <select id="selectArticles" resultType="entity.Article">
      select * from article
    </select>
</mapper>